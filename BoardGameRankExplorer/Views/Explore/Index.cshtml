@model BoardGameRankExplorer.Models.BoardGameModel
@{

    ViewBag.Title = "Index";
}



<h2>Rank from @Model.FirstRank to @Model.LastRank</h2>

<table id="example" class="display" style="width:100%">
    <thead>
    <tr>
        <th>Rank</th>
        <th>Image</th>
        <th>Name</th>
        <th>Year</th>
    </tr>
    </thead>

    <tbody>


        @foreach (var b in Model.BoardGameCollection)
        {
            <tr>
                <td>@b.Rank</td>
                <td><img src="@b.ImgUrl"/></td>
                <td><a href="@b.GameUrl">@b.Name</a></td>
                <td>@b.Year</td>
            </tr>
        }


    </tbody>

</table>

